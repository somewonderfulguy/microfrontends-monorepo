{
  "plugins": ["jest"],
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/style",
    "plugin:jest/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    // General
    "no-console": ["warn", { "allow": ["warn", "error"] }],

    // React
    "react/react-in-jsx-scope": "off"
  }
}
